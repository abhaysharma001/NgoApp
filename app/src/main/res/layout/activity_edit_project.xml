<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditProject">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_details"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edProjectTitle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            android:fontFamily="@font/andika"
            android:hint="@string/enter_project_title"
            android:paddingStart="10dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/andika"
                android:text="@string/start_date_and_end_date_of_project" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProjectFromDate"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/light_gray"
                    android:fontFamily="@font/andika"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="@string/from"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvProjectToDate"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@color/light_gray"
                    android:fontFamily="@font/andika"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="@string/to"
                    android:textColor="@color/black" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/andika"
                android:text="@string/location_of_project" />

            <EditText
                android:id="@+id/edProjectLocation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:background="@color/light_gray"
                android:fontFamily="@font/andika"
                android:paddingStart="10dp"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/andika"
                android:text="@string/description" />


            <EditText
                android:id="@+id/edProjectDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone"
                android:background="@color/light_gray"
                android:fontFamily="@font/andika"
                android:gravity="top|start"
                android:padding="10dp"
                android:textColor="@color/black" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bAddProject"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_border_bg"
            android:fontFamily="@font/andika"
            android:text="@string/add_project"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>


</ScrollView>